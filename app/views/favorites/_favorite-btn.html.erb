 <% if book.favorited_by?(current_user) %>
 <td>
    <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <i class="fas fa-heart unlike-btn"></i><%= book.favorites.count %>
    <% end %>
  </td>
 <% else %>
 <td>
   <%= link_to book_favorites_path(book), method: :post, remote: true do %>
   <i class="far fa-heart like-btn" ></i><%= book.favorites.count %>
   <% end %>
  </td>
 <% end %>